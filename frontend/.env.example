# Frontend Environment Variables
# SECURITY WARNING: Only VITE_ prefixed variables are exposed to the client
# Do not put sensitive data here as it will be visible in the browser

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_TTS=true
VITE_ENABLE_ASR_FALLBACK=true
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Audio Settings
VITE_DEFAULT_TTS_VOLUME=0.8
VITE_DEFAULT_ASR_SENSITIVITY=0.5
VITE_DEFAULT_VOICE_SPEED=1.0
VITE_MAX_RECORDING_DURATION=60000
VITE_AUDIO_SAMPLE_RATE=16000

# UI Configuration
VITE_APP_TITLE=Voice AI RPG Game
VITE_APP_VERSION=1.0.0
VITE_MAX_MESSAGE_LENGTH=1000
VITE_TYPING_INDICATOR_DELAY=500
VITE_CONNECTION_RETRY_ATTEMPTS=5
VITE_CONNECTION_RETRY_DELAY=1000

# Error Handling
VITE_ENABLE_ERROR_REPORTING=true
VITE_ERROR_DISPLAY_DURATION=5000

# Performance Settings
VITE_ENABLE_LAZY_LOADING=true
VITE_CACHE_DURATION=300000

# Development Settings (only for development)
VITE_SHOW_REDUX_DEVTOOLS=false
VITE_ENABLE_HOT_RELOAD=true
VITE_MOCK_API_RESPONSES=false
