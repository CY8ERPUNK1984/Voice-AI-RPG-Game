# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# Anthropic Claude API (alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Audio Processing
MAX_AUDIO_FILE_SIZE=10485760
SUPPORTED_AUDIO_FORMATS=mp3,wav,ogg,webm
AUDIO_UPLOAD_PATH=uploads/audio

# Session Management
SESSION_TIMEOUT=3600000
MAX_CONVERSATION_HISTORY=50
MAX_CONCURRENT_SESSIONS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# GitHub Token (for repository operations if needed)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/voice_ai_rpg
# REDIS_URL=redis://localhost:6379