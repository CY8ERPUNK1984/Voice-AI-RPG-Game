# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost
FRONTEND_URL=http://localhost:3000

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude API (alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Audio Processing Configuration
MAX_AUDIO_FILE_SIZE=25000000
SUPPORTED_AUDIO_FORMATS=mp3,wav,ogg,webm,m4a
AUDIO_TEMP_DIR=temp/audio
AUDIO_CLEANUP_INTERVAL=3600000

# Session Management
SESSION_TIMEOUT=3600000
SESSION_CLEANUP_INTERVAL=1800000
MAX_CONVERSATION_HISTORY=50
MAX_CONCURRENT_SESSIONS=100

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=combined.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Security Configuration
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Performance Configuration
CACHE_TTL=300000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Development Configuration (only for development)
ENABLE_DEBUG_LOGS=true
ENABLE_PERFORMANCE_MONITORING=true
MOCK_OPENAI_API=false
