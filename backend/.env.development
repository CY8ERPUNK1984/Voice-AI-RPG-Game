# Development Environment Configuration
NODE_ENV=development
PORT=3001
HOST=localhost
FRONTEND_URL=http://localhost:3000

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# OpenAI Configuration (use your actual keys)
OPENAI_MODEL=gpt-4
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Audio Configuration
MAX_AUDIO_FILE_SIZE=25000000
SUPPORTED_AUDIO_FORMATS=mp3,wav,ogg,webm,m4a
AUDIO_TEMP_DIR=temp/audio
AUDIO_CLEANUP_INTERVAL=3600000

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_CLEANUP_INTERVAL=1800000
MAX_CONVERSATION_HISTORY=50
MAX_CONCURRENT_SESSIONS=100

# Rate Limiting (more lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Logging (verbose for development)
LOG_LEVEL=debug
LOG_FILE=combined.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Security (development values)
BCRYPT_ROUNDS=4

# Performance
CACHE_TTL=60000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Development Features
ENABLE_DEBUG_LOGS=true
ENABLE_PERFORMANCE_MONITORING=true
MOCK_OPENAI_API=false