# Production Environment Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
FRONTEND_URL=https://your-domain.com

# CORS Settings
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# OpenAI Configuration
OPENAI_API_KEY=your_production_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=your_production_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Audio Configuration
MAX_AUDIO_FILE_SIZE=25000000
SUPPORTED_AUDIO_FORMATS=mp3,wav,ogg,webm,m4a
AUDIO_TEMP_DIR=/tmp/audio
AUDIO_CLEANUP_INTERVAL=1800000

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_CLEANUP_INTERVAL=900000
MAX_CONVERSATION_HISTORY=50
MAX_CONCURRENT_SESSIONS=1000

# Rate Limiting (strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Logging (production level)
LOG_LEVEL=info
LOG_FILE=/var/log/voice-ai-rpg/app.log
LOG_MAX_SIZE=52428800
LOG_MAX_FILES=10

# Security (production values)
JWT_SECRET=your_very_secure_jwt_secret_here
BCRYPT_ROUNDS=12

# Performance
CACHE_TTL=300000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Production Settings
ENABLE_DEBUG_LOGS=false
ENABLE_PERFORMANCE_MONITORING=true
MOCK_OPENAI_API=false